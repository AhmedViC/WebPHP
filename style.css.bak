      .footer{
    background-color: #24262b;
    padding: 1px 0;

      }
      .footer-col{
      width: 23%;
      padding: 0 15px;
      font-style: normal;
      }

      .footer-col h4{
      font-size: 18px;
    color: white;
    text-transform: capitalize;
    margin-bottom: 30px;
    font-weight: 500;
    position: relative;
       
        }

        .footer-col h4::before{
          
            content: ' ';
            position: absolute;
            left:0;
            bottom: -10px;
            background-color: rgb(150, 42, 42);
            height: 3px;
            box-sizing: border-box;
            width: 70px;

        }

        .footer-col ul li {
        margin-bottom: 10px;


        }
        .footer-col ul li a{
     font-size: 15px;
     text-transform: capitalize;
    
     text-decoration: none;
     font-weight: 300;
     color:rgb(190, 181, 181);
     display: block;
transition: all 0.3s ease;
        }
.footer-col ul li a:hover{

color: white;
padding-left: 8px;


    }

    .footer-col .social-links a{
         display: inline-block;
         height: 40px;
         width: 40px;
         background-color: rgb(59, 56, 56);
         margin:0 10px 10px 0;
         text-align: center;
         line-height: 40px;
         border-radius: 50%;
         color: white;
         transition: all 0.5s ease;
    }
    .footer-col .social-links a:hover{
    color: #24262b;
    background-color: white;

